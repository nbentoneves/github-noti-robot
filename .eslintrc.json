{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "jest",
    "jest-dom",
    "testing-library",
    "eslint-comments",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "ignorePatterns": [
    "webpack.main.config.js",
    "webpack.plugins.js",
    "webpack.renderer.config.js",
    "webpack.rules.js",
    "changelog.config.js"
  ],
  "parserOptions": {
    "project": ["./tsconfig.json", "./electron/tsconfig.json"],
    "tsconfigRootDir": "./"
  },
  "rules": {
    "react/function-component-definition": "off",
    "react/require-default-props": "off",
    "no-param-reassign": [
      "error",
      { "props": true, "ignorePropertyModificationsFor": ["state"] }
    ],
    // Airbnb prefer default export if there's only one export,
    // we always prefer named exports.
    "import/prefer-default-export": "off",
    //ISSUE: https://stackoverflow.com/questions/44939304/eslint-should-be-listed-in-the-projects-dependencies-not-devdependencies
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    //ISSUE: https://github.com/typescript-eslint/typescript-eslint/issues/2063#issuecomment-675156492
    "@typescript-eslint/ban-types": [
      "error",
      {
        "extendDefaults": true,
        "types": {
          "{}": false
        }
      }
    ],
    //Testing-Library
    "testing-library/await-async-query": "error",
    "testing-library/no-await-sync-query": "error",
    "testing-library/no-debugging-utils": "warn",
    "testing-library/no-dom-import": "off"
  }
}
